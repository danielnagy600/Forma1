@model Forma1WebApp.Data.Entities.Team

@{
    ViewData["Title"] = "Létrehozás";
}

<h1>Új csapat létrehozása</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfFoundation" class="control-label"></label>
                <input asp-for="YearOfFoundation" class="form-control" />
                <span asp-validation-for="YearOfFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WonOfChampionship" class="control-label"></label>
                <input asp-for="WonOfChampionship" class="form-control" />
                <span asp-validation-for="WonOfChampionship" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPaid" /> @Html.DisplayNameFor(model => model.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
