@model IEnumerable<Team>
@{
    ViewData["Title"] = "Főoldal";
}

<div class="text-center">
    <p class="h1">Forma 1</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfFoundation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WonOfChampionship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPaid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.YearOfFoundation)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.WonOfChampionship)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.IsPaid)
                </td>
            </tr>
        }
    </tbody>
</table>

